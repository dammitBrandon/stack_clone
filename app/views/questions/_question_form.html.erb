<%= form_for @question do |f| %>
  <% if @errors %>
    <% @errors.full_messages.each do |error| %>
      <%= error %>
    <% end %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :text %>
  <%= f.text_area :text %>
  <%= f.label :tag_names, "Tags" %>
  <%= f.text_area :tag_names %>
  <%= f.submit %>
<% end %>
