<% if session[:id] %>
  <%= flash[:login] %>
  <%= render partial: "shared/logout_button", layout: false %>
  <% unless request.original_url == 'http://localhost:3000/questions/new' %>
  <%= link_to "Create Question", new_question_path %>
  <% end %>
<% else %>
  <%= flash[:logout] %>
  <%= render partial: "shared/signup_form", layout: false%>
  <%= render partial: "shared/login_form", layout: false%>
<% end %>
